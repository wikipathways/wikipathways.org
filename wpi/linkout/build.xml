<?xml version="1.0"?>
<project name="Generate LinkOut files for WikiPathways" default="jar" basedir=".">
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>
	<property name="lib.dir" value="lib"/>
	<property name="lib.wpclient.dir" value="lib-wpclient"/>
	<property name="dist.dir" value="dist"/>
	<property name="jar.name" value="linkout.jar"/>
	
	<path id="class.path">
		<pathelement location="${build.dir}"/>
		<fileset dir="${lib.dir}">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${lib.wpclient.dir}">
			<include name="**/*.jar"/>
		</fileset>
	</path>

	<target name="prepare">
		<mkdir dir="${build.dir}"/>
		<mkdir dir="${dist.dir}"/>
		
		<exec dir="." executable="sh">
		  <arg line="dependencies.sh"/>
		</exec>
	</target>

	<target name="clean" description="Remove all generated files.">
		<delete dir="${build.dir}"/>
		<delete dir="${dist.dir}"/>
		<delete file="${jar.file}"/>
	</target>

	<target name="compile" depends="prepare" description="Compile sources">
		<javac srcdir="${src.dir}"
			   includes="**"
			   destdir="${build.dir}"
			   debug="true"
			   source="1.5">
			<classpath refid="class.path"/>
		</javac>
	</target>

	<target name="jar" depends="compile" description="Generates jar file">
		<pathconvert refid="class.path" property="class.path.manifest" pathsep=" ">
			<mapper>
				<chainedmapper>
					<!-- remove absolute path -->
					<flattenmapper />
					<!-- add lib/ prefix -->
					<globmapper from="*" to="lib/*" />
				</chainedmapper>
			</mapper>
		</pathconvert>

		<jar jarfile="${jar.name}">
			<manifest>
				<attribute name="Class-Path" value="${class.path.manifest}"/>
				<attribute name="Main-Class"
				             value="GenerateLinkOut" />
			</manifest>
			<fileset dir="${build.dir}" includes="**/*.class"/>
		</jar>
	</target>

	<target name="dist" depends="jar" description="Copies jar and external libraries to dist path">
		<copy file="${jar.name}" toDir="${dist.dir}"/>
		<copy toDir="${dist.dir}/lib">
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${lib.wpclient.dir}">
				<include name="*.jar"/>
			</fileset>
		</copy>
	</target>
</project>